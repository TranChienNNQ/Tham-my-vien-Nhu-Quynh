# --- Server Configuration ---
NODE_ENV=development
PORT=3001
SERVICE_NAME=user-service # Tên của microservice này (dùng cho logging, etc.)

# --- Database Configuration (PostgreSQL) ---
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tmv_user_service_db
DB_USER=your_postgres_user_here
DB_PASSWORD=your_postgres_password_here

# --- Security Configuration ---
JWT_SECRET=replace_this_with_a_very_strong_and_long_random_secret_key
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=10

# --- API Configuration ---
CORS_ALLOWED_ORIGINS=http://localhost:3000
BODY_LIMIT=10kb

# --- Logging Configuration ---
LOG_LEVEL=debug